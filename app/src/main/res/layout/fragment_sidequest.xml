<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/sideQuestConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/sideQuestTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SideQuest"
            android:textSize="36sp"
            tools:layout_editor_absoluteX="206dp" />

        <TextView
            android:id="@+id/sideQuestDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SideQuestDescription"
            app:layout_constraintTop_toBottomOf="@+id/sideQuestTitle"
            tools:layout_editor_absoluteX="0dp" />
    </android.support.constraint.ConstraintLayout>

</LinearLayout>
